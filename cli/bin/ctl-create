#!/usr/bin/env node

const program = require('commander');
const inquirer = require('inquirer');

const { promptList, initComponent } = require('../dist/create');

program
  .action(() => {
    inquirer.prompt(promptList).then((config) => {
      const {
        name,
        type,
        cName,
        componentType,
      } = config;
      initComponent({ name, type, cName, componentType });
    });
  })
  .parse(process.argv);
