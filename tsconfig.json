{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./lib/",
    "strict": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "packages/typings/*.d.ts"]
  },
  "exclude": ["node_modules", "lib"],
  "include": ["packages/**/**/*.ts", "packages/**/**/*.tsx"]
}
